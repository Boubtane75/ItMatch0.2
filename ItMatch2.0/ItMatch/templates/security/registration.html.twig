{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/register.css') }}">
{% endblock %}



{% block title %}Hello SecurityController!{% endblock %}

{% block body %}

<div class="containerFormulaire">
<div class="box">
<h1 class="container">Inscription</h1>

    {{ form_start(form) }}

    
    {{ form_row(form.username,{'label':'','attr':{'placeholder':'Nom utilisateur'}}) }}
    {{ form_row(form.email,{'label':'Email','attr':{'placeholder':'Adresse email'}}) }}
    {{ form_row(form.phone,{'label':'Telephone','attr':{'placeholder':'Numéro de téléphone'}}) }}
    {{ form_row(form.password,{'label':'Mot de passe ','attr':{'placeholder':'Mot de passe'}}) }}
    {{ form_row(form.confirm_password,{'label':'Confirme mot de passe','attr':{'placeholder':'Confirmer mot de passe'}}) }}
    <div class="fromInput">
        <div class="littleInput">
        {{ form_row(form.pays,{'label':'pays','attr':{'placeholder':'Pays'}}) }}
        </div>
        <div class="littleInput">
        {{ form_row(form.ville,{'label':'Ville','attr':{'placeholder':'Ville'}}) }}
        </div>
    </div>
    {{ form_row(form.adress,{'label':'Adress','attr':{'placeholder':'Adresse'}}) }}


    <button type="submit" class="btn btn-outline-primary">Inscription</button>
    {{ form_end(form) }}

   </div>
    </div>
{% endblock %}
