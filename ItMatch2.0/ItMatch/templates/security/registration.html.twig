{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}


{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<h1 class="container">Inscription</h1>

    {{ form_start(form) }}


    {{ form_row(form.username,{'label':'Login','attr':{'placeholder':'Login'}}) }}
    {{ form_row(form.email,{'label':'Email','attr':{'placeholder':'Adress email'}}) }}
    {{ form_row(form.phone,{'label':'Telephone','attr':{'placeholder':'Tel'}}) }}
    {{ form_row(form.password,{'label':'Mot de passe ','attr':{'placeholder':'Mot de passe'}}) }}
    {{ form_row(form.confirm_password,{'label':'Confirme mot de passe','attr':{'placeholder':'Confirme mot de passe'}}) }}
    {{ form_row(form.pays,{'label':'pays','attr':{'placeholder':'pays'}}) }}
    {{ form_row(form.ville,{'label':'Ville','attr':{'placeholder':'Ville'}}) }}
    {{ form_row(form.adress,{'label':'Adress','attr':{'placeholder':'Adress'}}) }}


    <button type="submit" class="btn btn-outline-primary">Inscription</button>
    {{ form_end(form) }}

{% endblock %}
