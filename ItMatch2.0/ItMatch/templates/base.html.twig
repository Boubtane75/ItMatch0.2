<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('build/home.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
        {% if not app.user %}
            <a class="navbar-brand" href="/"><img src="{{ asset('img/logo.png') }}"></a>
        {% else %}
            <a class="navbar-brand" href="/">Bienvenue {{ app.user.username }}</a>
        {% endif %}
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('search') }}">Rechercher<span class="sr-only">(current)</span></a>
                </li>
                {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link disabled">Proposer un trajet</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('trajet') }}">Proposer un trajet</a>
                    </li>
                {% endif %}

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>
                {% if not app.user %}
                    <li class="nav-item">
                    <a class="nav-link disabled">Profile</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('profile',{id: app.user.id}) }}">Profile</a>
                    </li>

                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href=" {{ path('Admin') }}">Admin</a>
                    </li>
                {% endif %}
            </ul>

            {% if not app.user %}
                <li class="navBtn">
                    <a type="button" href="{{ path('security_registration') }}" class="btnOfNav">Inscription</a>
                </li>
                <li class="navBtn">
                    <a type="button" href="{{ path('security_login') }}" class="btnOfNav">Connexion</a>
                </li>
        
            {% else %}
                <li class="navBtn">
                    <a type="button " href="{{ path('security_logout') }}" class="btnOfNav">Deconnexion</a>
                </li>
            {% endif %}

        </div>
    </nav>
        {% block body %}{% endblock %}

    <footer>
        <div class="footer-container">

            <div class="footer-block"><!--BLOCK 1-->
                <h2>Contact Us</h2>
                <hr>
                <div class="box-arrow"><img src="{{ asset('img/flecheb.png') }}" alt=""><a href="">vroomvrom@contact.fr</a></div>
                <div class="box-arrow"><img src="{{ asset('img/flecheb.png') }}" alt=""><a href="">06 81 36 72 45</a></div>
                <div class="box-arrow"><img src="{{ asset('img/flecheb.png') }}" alt=""><a href="">06 75 48 61 38</a></div>
            </div>

            <div class="footer-block"><!--BLOCK 1-->
                <h2>DÃ©couvrez nous</h2>
                <hr>
                <div class="box-arrow"><img src="{{ asset('img/flecheb.png') }}" alt=""><a href="">Teckel</a></div>
                <div class="box-arrow"><img src="{{ asset('img/flecheb.png') }}" alt=""><a href="">31 rue de l'impasse</a></div>
                <div class="box-arrow"><img src="{{ asset('img/flecheb.png') }}" alt=""><a href="">Map</a></div>
            </div>

            <div class="media-block">
                <h2>Suivez nous</h2>
                <hr>
                <div class="social-box">
                    <a href="#"><img src="{{ asset('img/facebookb.png') }}" alt="facebook logo"></a>
                    <a href="#"><img src="{{ asset('img/twitterb.png') }}"alt="twitter logo"></a>
                    <a href="#"><img src="{{ asset('img/youtubeb.png') }}"alt="youtube logo"></a>
                </div>
            </div>

        </div>
    </footer>
    <script src="{{ asset('build/app.js') }}"></script>
